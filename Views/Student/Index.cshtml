@model IEnumerable<School.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "University")">University</a></li>
        <li class="breadcrumb-item active" aria-current="page">Student List</li>
    </ol>
</nav>

<!-- Page Content -->
<div class="container py-4">
    <h1 class="mb-4 text-center">
        <i class="fa-solid fa-users me-2"></i>Student List
    </h1>

    <!-- Action and Search Bar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-action="Create" class="btn btn-success" data-bs-toggle="tooltip" title="Create a new student">
                <i class="fa-solid fa-plus me-2"></i>Create New Student
            </a>
        </div>
        <form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Student">
            <p>
                <input size="30" placeholder="tapez un Nom" type="search" name="name" />
                <select asp-items="ViewBag.UniversityID" name="universityID" size=1.5 style="width:300px ; height:30px"></select>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-search"></i> Search</button>
            </p>
        </form>
    </div>
    

    <!-- Student Table -->
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" title="Edit student details">
                            <i class="fa-solid fa-pen"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="View student details">
                            <i class="fa-solid fa-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Delete student">
                            <i class="fa-solid fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Tooltip Initialization
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Real-Time Search Functionality
        document.getElementById('searchInput').addEventListener('input', function () {
            var searchValue = document.getElementById('searchInput').value.toLowerCase();
            var rows = document.querySelectorAll('table tbody tr');
            rows.forEach(function (row) {
                var studentName = row.querySelector('td:first-child').innerText.toLowerCase();
                if (studentName.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
